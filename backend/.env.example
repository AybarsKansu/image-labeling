# Environment Variables

# Base path (optional, defaults to backend directory)
# BASE_DIR=/path/to/backend

# Dataset directory (optional, defaults to BASE_DIR/dataset)
# DATASET_DIR=/path/to/dataset

# Default models
DEFAULT_YOLO_MODEL=yolov8m-seg.pt
DEFAULT_SAM_MODEL=sam2.1_l.pt
DEFAULT_YOLO_WORLD_MODEL=yolov8l-world.pt

# Inference settings
TILE_SIZE=640
TILE_OVERLAP=0.25
DEFAULT_CONFIDENCE=0.5
DEFAULT_IOU_THRESHOLD=0.5

# Device (cuda or cpu)
DEVICE=cuda

# CORS origins (comma-separated or *)
CORS_ORIGINS=*
